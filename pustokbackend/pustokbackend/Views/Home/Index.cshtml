<!--=================================
        Hero Area
        ===================================== -->
      <section class="hero-area hero-slider-1">
        <div
          class="sb-slick-slider"
          data-slick-setting='{
                            "autoplay": true,
                            "fade": true,
                            "autoplaySpeed": 3000,
                            "speed": 3000,
                            "slidesToShow": 1,
                            "dots":true
                            }'
       @foreach (var slider in Model.Sliders)
        {
            if (slider.Order % 2 == 1)
            {
                <div class="single-slide bg-shade-whisper  ">
                    <div class="container">
                        <div class="home-content text-center text-sm-left position-relative">
                            <div class="hero-partial-image image-right">
                                <img src="~/assets/image/bg-images/@slider.ImageUrl" alt="">
                            </div>
                            <div class="row no-gutters ">
                                <div class="col-xl-6 col-md-6 col-sm-7">
                                    <div class="home-content-inner content-left-side">
                                        <h1>
                                            @slider.Title1<br>
                                            @slider.Title2
                                        </h1>
                                        <h2>@slider.Info</h2>
                                        <a href="@slider.Info" class="btn btn-outlined--primary">
                                            @slider.Price
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="single-slide bg-ghost-white">
                    <div class="container">
                        <div class="home-content text-center text-sm-left position-relative">
                            <div class="hero-partial-image image-left">
                                <img src="~/assets/image/bg-images/@slider.ImageUrl" alt="">
                            </div>
                            <div class="row align-items-center justify-content-start justify-content-md-end">
                                <div class="col-lg-6 col-xl-7 col-md-6 col-sm-7">
                                    <div class="home-content-inner content-right-side">
                                        <h1>
                                            @slider.Title1<br>
                                            @slider.Title2
                                        </h1>
                                        <h2>@slider.Info</h2>
                                        <a href="@slider.Price" class="btn btn-outlined--primary">
                                            @slider.Price
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
