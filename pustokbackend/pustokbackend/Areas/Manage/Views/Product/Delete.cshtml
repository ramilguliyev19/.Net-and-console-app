@model Product

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Prootion Delete</h4>
                  
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="@Model.Name">Are you sure?</label>
                      <input asp-for="@Model.Name" class="form-control" placeholder="Book Name">
                    </div>
                   
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-area="manage" asp-controller="product" 
                       asp-action="index"  
                       class="btn btn-light">Cancel
                   </a>                  
                   </form>
                </div>
              </div>
        </div>
    </div>
</div>