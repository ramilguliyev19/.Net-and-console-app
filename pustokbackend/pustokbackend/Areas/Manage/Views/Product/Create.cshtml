@model Product

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">First Promotion Create</h4>
                  
                <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="@Model.Author.Fullname">Author Name</label>
                      <input asp-for="@Model.Author.Fullname" class="form-control" placeholder="Author Name">
                    </div>
                     <div class="form-group">
                      <label asp-for="@Model.Genre.Name">Genre</label>
                      <input asp-for="@Model.Genre.Name" class="form-control" placeholder="Genre">
                    </div>

                    <div class="form-group">
                      <label asp-for="@Model.Name">Book Name</label>
                      <input asp-for="@Model.Name" class="form-control" placeholder="Book Name">
                    </div>
                     <div class="form-group">
                      <label asp-for="@Model.SalePrice">Sale Price</label>
                      <input asp-for="@Model.SalePrice" class="form-control" placeholder="Sale Price">
                    </div>
                     <div class="form-group">
                      <label asp-for="@Model.CostPrice">Cost Price</label>
                      <input asp-for="@Model.CostPrice" class="form-control" placeholder="Cost Price">
                    </div>
                    <div class="form-group">
                      <label asp-for="@Model.DiscountPrice">Discount Price</label>
                      <input asp-for="@Model.DiscountPrice" class="form-control" placeholder="Discount Price">
                    </div>
                    <div class="form-group">
                      <label asp-for="@Model.Desciption">Book image</label>
                      <input asp-for="@Model.Desciption" class="form-control" placeholder="Book image">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-area="manage" asp-controller="product" 
                       asp-action="index"  
                       class="btn btn-light">Cancel
                   </a>  
                </form>

                  
                </div>
              </div>
        </div>
    </div>
</div>