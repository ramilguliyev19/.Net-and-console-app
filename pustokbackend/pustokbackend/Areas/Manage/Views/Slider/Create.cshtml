@model Slider

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Slider Create</h4>
                  
                  <form method="post" class="forms-sample">
                    
                    <div class="form-group">
                      <label asp-for="@Model.Title1">manage</label>
                      <input asp-for="@Model.Title1" class="form-control" placeholder="Author Name">
                    </div>
                     <div class="form-group">
                      <label asp-for="@Model.Title2">Book name</label>
                      <input asp-for="@Model.Title2" class="form-control" placeholder="Book Name">
                    </div>
                    <div class="form-group">
                      <label asp-for="@Model.Info">Information about created book</label>
                      <input asp-for="@Model.Info" class="form-control" placeholder="Enter info">
                    </div>
                     <div class="form-group">
                      <label asp-for="@Model.Price">Book Price</label>
                      <input asp-for="@Model.Price" class="form-control" placeholder="Price">
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-area="manage" asp-controller="slider" 
                       asp-action="index"  
                       class="btn btn-light">Cancel
                   </a>                  
                   </form>

                  
                </div>
              </div>
        </div>
    </div>
</div>