@model Promotion

<div class="container">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between my-5">
                        <button type="button" class="btn btn-primary">
                            <a class="text-decoration-none text-white" 
                            asp-area="manage" asp-action="index" 
                            asp-controller="promotion">Go To Back
                            </a>
                        </button>
                    </div>
                  <h1 class="card-title">Promotion Details</h1>
                  
                  <div class="table-responsive text-center">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Site
                          </th>
                          <th>
                            Image
                          </th>
                        </tr>
                      </thead>

                      <tbody>
                         <tr>
                             <td>
                                <div class="hero-partial-image image-left">
                                    <a asp-for="@Model.RedirectUrl" alt="Site">@Model.RedirectUrl</a>
                               </div>                              
                             </td>
                             <td>
                                <div class="hero-partial-image image-left">
                                    <img src="~/assets/image/bg-images/@Model.RedirectText" alt="Image">
                               </div>                              
                             </td>
                              <td class="text-center">
                                <a asp-area="manage" asp-controller="promotion" 
                                asp-action="update" asp-route-id="@Model.Id"  
                                class="btn btn-warning my-1">Update
                                </a>  
                                
                                <a asp-area="manage" asp-controller="promotion" 
                                asp-action="delete" asp-route-id="@Model.Id"  
                                class="btn btn-danger my-1">Delete
                                </a>
                              </td>
                          
                          </tr>
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>