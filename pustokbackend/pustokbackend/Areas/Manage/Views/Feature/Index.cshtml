@model List<Feature>

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title">Basic Table</h4>
                        <a class="btn btn-success" asp-area="manage" asp-controller="Feature" asp-action="Create">Create</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Icon Url</th>
                                <th>Title</th>
                                <th>Subtitle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var feature in @Model)
                            {
                                <tr>
                                    <td>@feature.Id</td>
                                    <td>
                                        <i class="fas @feature.IconUrl"></i>
                                    </td>
                                    <td>@feature.Title1</td>
                                    <td>
                                        @feature.Title2
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-area="manage" asp-controller="Feature" asp-action="Details" asp-route-id="@feature.Id">Details</a>
                                        <a class="btn btn-warning" asp-area="manage" asp-controller="Feature" asp-action="Update" asp-route-id="@feature.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="manage" asp-controller="Feature" asp-action="Details" asp-route-id="@feature.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                           
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>