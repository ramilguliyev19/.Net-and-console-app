@model Feature
<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
                      <div class="card">
                        <div class="card-body">
                          <h4 class="card-title">Default form</h4>
                          <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                            <div class="form-group">
                              <label for="exampleInputUsername1">Title</label>
                              <input value="@Model.Title1" name="title" type="text" class="form-control" id="exampleInputUsername1" placeholder="Title">
                            </div>
                            <div class="form-group">
                              <label for="exampleInputEmail1">Subtitle</label>
                              <input value="@Model.Title2" name="subtitle"  type="text" class="form-control" id="exampleInputEmail1" placeholder="tITLE2">
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Icon</label>
                              <input value="@Model.IconUrl" name="iconUrl"  type="text" class="form-control" id="exampleInputPassword1" placeholder="Icon">
                            </div>
                            <button  type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                          </form>
                        </div>
                      </div>
                    </div>
    </div>
</div>